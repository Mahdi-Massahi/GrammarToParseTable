<Application x:Class="GrammarToParseTable.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GrammarToParseTable"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is importent -->
                <ResourceDictionary Source="DarkTheme/Colors.xaml"/>
                <ResourceDictionary Source="DarkTheme/Controls.xaml"/>
                <ResourceDictionary Source="DarkTheme/Windows.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
