<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GrammarToParseTable">
    <Style TargetType="{x:Type Window}" x:Key="DarkTheme">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundDarkBrush}"/>
        <Setter Property="AllowsTransparency" Value="False"/>
        <Setter Property="BorderBrush" Value="{StaticResource WindowBorderBlueBrush}"/>
        <Setter Property="Title" Value="Application Name"/>
        <Setter Property="Icon" Value="{Binding}"/>
        <Setter Property="Padding" Value="5 5 5 5"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="BorderThickness" Value="0.5 0.5 0.5 0.5"/>
    </Style>
</ResourceDictionary>